---
import AuthenticationLayout from '../../../layouts/admin/authentication-layout.astro'
import { getAssetPrefix, getPathPrefix } from '../../../../utils/path.js'
---

<AuthenticationLayout
  title="Lock Screen"
  description="Lock screen example"
  currentPath="authentication/modern/lock-screen"
>
  <div
    class="d-flex justify-content-center align-items-center min-vh-100 pt-5 mt-2 pt-sm-0 mt-sm-0"
  >
    <a
      href={getPathPrefix('/')}
      class="btn btn-outline-primary position-absolute top-0 start-0 m-3"
    >
      Back
    </a>
    <a
      href={getPathPrefix('/authentication/modern/register')}
      class="btn btn-outline-primary position-absolute top-0 end-0 m-3"
    >
      Create Account
    </a>
    <div class="text-center w-100" style="max-width: 400px;">
      <!-- Main Card -->
      <div class="card m-2">
        <div class="card-body p-2">
          <!-- Company Logo -->
          <img
            src={getAssetPrefix('/assets/svg/astero-icon-color.svg')}
            alt="AsteroAdmin Logo"
            class="mb-4"
            style="width: 40px; height: 40px;"
          />
          <h4 class="card-title mb-2 fs-4">Account locked</h4>
          <p class="text-muted">
            <i class="ri-lock-line"></i> Your account has been locked. Please enter your password to
            unlock it.
          </p>
          <form>
            <div class="text-center mb-4">
              <!-- Profile Image -->
              <div class="avatar position-relative">
                <img
                  src={getAssetPrefix('/assets/img/avatars/avatar2.jpg')}
                  alt="User"
                  class="rounded-circle mb-2"
                  width="56"
                  height="56"
                />
              </div>
              <!-- User Name -->
              <h5 class="text-muted">Amara Evans</h5>
            </div>
            <div class="mb-3">
              <div class="d-flex justify-content-between align-items-center mb-1">
                <label for="password" class="form-label mb-0">Password</label>
                <a
                  href={getPathPrefix('/authentication/modern/forgot-password')}
                  class="text-decoration-none text-primary">Forgot your password?</a
                >
              </div>
              <div class="password-wrapper">
                <input
                  type="password"
                  class="form-control password-input"
                  id="password"
                  placeholder="Enter your password"
                  autocomplete="current-password"
                  required
                />
                <button class="password-toggle" type="button" aria-label="Show password">
                  <i class="ri-eye-off-line"></i>
                </button>
              </div>
            </div>
            <button type="submit" class="btn btn-primary w-100">Unlock Account</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</AuthenticationLayout>
