---
import AdminLayout from '../../layouts/admin/admin-layout.astro'
import PageHeader from '../../components/common/page-header.astro'
import type { Props as PageHeaderProps } from '../../components/common/page-header.astro'
import { getAssetPrefix, getPathPrefix } from '../../../utils/path.js'

const pageHeaderProps: PageHeaderProps = {
  title: 'Profile Settings',
  breadcrumbs: [
    { label: 'Dashboard', href: getPathPrefix('/dashboard'), class: '' },
    { label: 'Users', href: getPathPrefix('/users'), class: '' },
    { label: 'Profile', class: 'active' }
  ]
}

const bio = 'Administrator with 5+ years of experience in system management and web development.'
---

<AdminLayout title="User Profile" description="User profile settings" currentPath="users/profile">
  <PageHeader {...pageHeaderProps} />

  <div class="row g-4">
    <!-- Profile Card -->
    <div class="col-lg-3">
      <div class="card p-3">
        <div class="card-header pt-3 text-center">
          <div class="position-relative d-inline-block mb-4">
            <img
              src={getAssetPrefix('/assets/img/avatars/avatar2.jpg')}
              alt="Profile"
              class="rounded-circle"
              width="120"
              height="120"
              style="object-fit: cover;"
            />
            <button
              class="btn btn-primary btn-icon-sm position-absolute bottom-0 end-0 rounded-circle p-2"
            >
              <i class="ri-camera-fill"></i>
            </button>
          </div>
          <h5 class="mb-1">Amara Evans</h5>
          <p class="text-muted mb-0">amara@example.com</p>
        </div>
        <div class="card-body">
          <nav class="nav-tree">
            <ul class="list-unstyled">
              <li class="nav-section">
                <span class="nav-section-text text-uppercase px-2">Personal</span>
              </li>
              <!-- Profile -->
              <li class="nav-item active">
                <a class="nav-link" href={getPathPrefix('/users/profile')}>
                  <i class="ri-user-line"></i>
                  <span>Profile</span>
                </a>
              </li>
              <!-- Notifications -->
              <li class="nav-item">
                <a class="nav-link" href={getPathPrefix('/users/notifications')}>
                  <i class="ri-notification-4-line"></i>
                  <span>Notifications</span>
                </a>
              </li>
              <!-- Security -->
              <li class="nav-item">
                <a class="nav-link" href={getPathPrefix('/users/security')}>
                  <i class="ri-shield-check-line"></i>
                  <span>Security</span>
                </a>
              </li>
              <li class="nav-section">
                <span class="nav-section-text text-uppercase px-2">Other</span>
              </li>
              <!-- Billing -->
              <li class="nav-item">
                <a class="nav-link" href={getPathPrefix('/users/billing')}>
                  <i class="ri-bank-card-line"></i>
                  <span>Billing</span>
                </a>
              </li>
              <!-- Team -->
              <li class="nav-item">
                <a class="nav-link" href={getPathPrefix('/users/team')}>
                  <i class="ri-group-line"></i>
                  <span>Team</span>
                </a>
              </li>
            </ul>
          </nav>
        </div>
      </div>
    </div>

    <!-- Profile Information -->
    <div class="col-lg-9">
      <div class="card">
        <div class="card-header">
          <div class="d-flex align-items-center">
            <i class="ri-user-line me-2"></i>
            <h5 class="card-title mb-0">Basic Info</h5>
          </div>
        </div>
        <div class="card-body">
          <form>
            <div class="row g-3">
              <div class="col-md-12">
                <label class="form-label">Full Name</label>
                <input type="text" class="form-control" value="Amara Evans" autocomplete="name" />
              </div>
              <div class="col-md-6">
                <label class="form-label">Email</label>
                <input
                  type="email"
                  class="form-control"
                  value="amara@example.com"
                  autocomplete="username"
                />
              </div>
              <div class="col-md-6">
                <label class="form-label">Phone</label>
                <input
                  type="tel"
                  class="form-control"
                  value="+1 (555) 123-4567"
                  autocomplete="tel"
                />
              </div>
              <div class="col-12">
                <label class="form-label">Bio</label>
                <textarea class="form-control" rows="3">{bio} </textarea>
                <div class="form-text">Brief description for your profile.</div>
              </div>
              <div class="col-md-6">
                <label class="form-label">Location</label>
                <input type="text" class="form-control" value="San Francisco, CA" />
              </div>
              <div class="col-md-6">
                <label class="form-label">Time Zone</label>
                <select class="form-select">
                  <option value="PST">Pacific Time (PST)</option>
                  <option value="MST">Mountain Time (MST)</option>
                  <option value="CST">Central Time (CST)</option>
                  <option value="EST">Eastern Time (EST)</option>
                </select>
              </div>
            </div>
          </form>
        </div>
      </div>
      <div class="card mt-4">
        <div class="card-header">
          <div class="d-flex align-items-center">
            <i class="ri-lock-line me-2"></i>
            <h5 class="card-title mb-0">Privacy Settings</h5>
          </div>
        </div>
        <div class="card-body">
          <div class="list-group">
            <div
              class="list-group-item d-flex justify-content-between align-items-center p-3 border-0"
            >
              <div>
                <div class="mb-2">Profile Visibility</div>
                <div class="text-muted">Control who can see your profile details and activity.</div>
              </div>
              <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="profileVisibility" checked />
              </div>
            </div>
            <div
              class="list-group-item d-flex justify-content-between align-items-center p-3 border-0"
            >
              <div>
                <div class="mb-2">Activity Status</div>
                <div class="text-muted">
                  Choose if others can see your online activity and status.
                </div>
              </div>
              <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="activityStatus" checked />
              </div>
            </div>
            <div
              class="list-group-item d-flex justify-content-between align-items-center p-3 border-0"
            >
              <div>
                <div class="mb-2">Third-Party Data Sharing</div>
                <div class="text-muted">
                  Manage whether your data is shared with third-party services.
                </div>
              </div>
              <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="thirdPartyDataSharing" />
              </div>
            </div>
            <div
              class="list-group-item d-flex justify-content-between align-items-center p-3 border-0"
            >
              <div>
                <div class="mb-2">Location Tracking</div>
                <div class="text-muted">
                  Enable or disable location-based features and tracking.
                </div>
              </div>
              <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="locationTracking" />
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="card mt-4">
        <div class="card-header">
          <div class="d-flex align-items-center">
            <i class="ri-delete-bin-6-line me-2"></i>
            <h5 class="card-title mb-0">Delete Account</h5>
          </div>
        </div>
        <div class="card-body">
          <p class="text-muted">
            <strong>Warning!</strong> Once your account is deleted, you will lose access to all your
            data and services linked to this account. If you're sure about this action, please proceed
            by clicking the "Delete Account" button below.
          </p>
          <div class="d-flex justify-content-start">
            <button class="btn btn-outline-danger">Delete Account</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</AdminLayout>
