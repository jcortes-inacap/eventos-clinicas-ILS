---
import AuthenticationLayout from '../../../layouts/admin/authentication-layout.astro'
import { getAssetPrefix, getPathPrefix } from '../../../../utils/path.js'
---

<AuthenticationLayout
  title="New Password"
  description="New password example"
  currentPath="authentication/modern/new-password"
>
  <div
    class="d-flex justify-content-center align-items-center min-vh-100 pt-5 mt-2 pt-sm-0 mt-sm-0"
  >
    <a
      href={getPathPrefix('/')}
      class="btn btn-outline-primary position-absolute top-0 start-0 m-3"
    >
      Back
    </a>
    <a
      href={getPathPrefix('/authentication/modern/register')}
      class="btn btn-outline-primary position-absolute top-0 end-0 m-3"
    >
      Create Account
    </a>
    <div class="text-center w-100" style="max-width: 500px;">
      <!-- Main Card -->
      <div class="card m-2">
        <div class="card-body p-2">
          <!-- Company Logo -->
          <img
            src={getAssetPrefix('/assets/svg/astero-icon-color.svg')}
            alt="AsteroAdmin Logo"
            class="mb-4"
            style="width: 40px; height: 40px;"
          />
          <h4 class="card-title mb-2 fs-4">Set Up Your New Password</h4>
          <p class="text-muted mb-2">
            Choose a strong new password to secure your account. Make sure it's something memorable
            and safe.
          </p>

          <!-- New Password Form -->
          <form class="text-start mb-3">
            <div class="mb-3">
              <label for="new-password" class="form-label">New Password</label>
              <div class="password-wrapper">
                <input
                  type="password"
                  class="form-control password-input"
                  id="new-password"
                  placeholder="Password"
                  autocomplete="new-password"
                  required
                  minlength="8"
                  title="Password must be at least 8 characters long"
                />
                <button class="password-toggle" type="button" aria-label="Show password">
                  <i class="ri-eye-off-line"></i>
                </button>
              </div>
            </div>
            <div class="mb-3">
              <label for="confirm-password" class="form-label">Confirm Password</label>
              <div class="password-wrapper">
                <input
                  type="password"
                  class="form-control password-input"
                  id="confirm-password"
                  placeholder="Password"
                  autocomplete="new-password"
                  required
                />
                <button class="password-toggle" type="button" aria-label="Show password">
                  <i class="ri-eye-off-line"></i>
                </button>
              </div>
              <small class="text-muted">Ensure both fields match</small>
            </div>
            <button type="submit" class="btn btn-primary w-100">Save New Password</button>
          </form>

          <div class="mb-2">
            <a
              href={getPathPrefix('/authentication/modern/login')}
              class="text-decoration-none text-center">Back to Login</a
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</AuthenticationLayout>
