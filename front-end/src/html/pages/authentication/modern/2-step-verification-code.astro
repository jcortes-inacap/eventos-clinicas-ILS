---
import AuthenticationLayout from '../../../layouts/admin/authentication-layout.astro'
import { getAssetPrefix, getPathPrefix } from '../../../../utils/path.js'
---

<AuthenticationLayout
  title="2-Step Verification Code"
  description="2-Step verification code example"
  currentPath="authentication/modern/2-step-verification-code"
>
  <div
    class="d-flex justify-content-center align-items-center min-vh-100 pt-5 mt-2 pt-sm-0 mt-sm-0"
  >
    <a
      href={getPathPrefix('/')}
      class="btn btn-outline-primary position-absolute top-0 start-0 m-3"
    >
      Back
    </a>
    <a
      href={getPathPrefix('/authentication/modern/register')}
      class="btn btn-outline-primary position-absolute top-0 end-0 m-3"
    >
      Create Account
    </a>
    <div class="text-center w-100" style="max-width: 400px;">
      <!-- Main Card -->
      <div class="card m-2">
        <div class="card-body p-2">
          <!-- Company Logo -->
          <img
            src={getAssetPrefix('/assets/svg/astero-icon-color.svg')}
            alt="AsteroAdmin Logo"
            class="mb-4"
            style="width: 40px; height: 40px;"
          />
          <h4 class="card-title mb-2 fs-4">2-Step Verification</h4>
          <form>
            <div class="mb-3">
              <p class="text-muted">
                Enter the 6-digit verification code sent to your phone number.
              </p>
            </div>
            <div class="d-flex justify-content-between mb-3">
              <input
                type="text"
                class="py-3 me-1 form-control text-center"
                id="code1"
                maxlength="1"
                required
                autofocus
              />
              <input
                type="text"
                class="py-3 me-1 form-control text-center"
                id="code2"
                maxlength="1"
                required
              />
              <input
                type="text"
                class="py-3 me-1 form-control text-center"
                id="code3"
                maxlength="1"
                required
              />
              <input
                type="text"
                class="py-3 me-1 form-control text-center"
                id="code4"
                maxlength="1"
                required
              />
              <input
                type="text"
                class="py-3 me-1 form-control text-center"
                id="code5"
                maxlength="1"
                required
              />
              <input
                type="text"
                class="py-3 form-control text-center"
                id="code6"
                maxlength="1"
                required
              />
            </div>
            <div class="form-check text-start mb-3">
              <label class="form-check-label" for="dontAskAgain">
                <input class="form-check-input" type="checkbox" id="dontAskAgain" />
                Do not ask again on this device
              </label>
            </div>
            <button type="submit" class="btn btn-primary w-100">Verify Code</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</AuthenticationLayout>
