---
import { getAssetPrefix, getPathPrefix } from '../../../../utils/path.js'
import AdminLayout from '../../../layouts/admin/admin-layout.astro'
import PageHeader from '../../../components/common/page-header.astro'
import type { Props as PageHeaderProps } from '../../../components/common/page-header.astro'
import ConfirmationModal from '../../../components/common/confirmation-modal.astro'

// Register DataTables styles
const pageStyles = `
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/datatables.net-bs5@1.13.7/css/dataTables.bootstrap5.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/datatables.net-responsive-bs5@2.5.0/css/responsive.bootstrap5.min.css">
`

// Register DataTables scripts
const pageScript = `<!-- Add this scripts before body close -->
<!-- Jquery -->
<script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>

<!-- DataTables JS -->
<script src="https://cdn.jsdelivr.net/npm/datatables.net@1.13.7/js/jquery.dataTables.min.js"></script>

<script src="${getAssetPrefix('/assets/vendor/datatables/datatables.init.js')}"></script>
<script type="module" src="${getAssetPrefix('/assets/js/pages/roles-permissions/permissions/table.js')}"></script>
`

//Formato de la tabla área
interface Area {
  id_area: number;
  descripcion: string;
  estado: number;
}
//Se obtienen los datos de areas de la base de datos
let areas: Area[] = [];

const url = new URL(Astro.request.url);
const estado = url.searchParams.getAll('estado[]'); // puede ser ['1'], ['0'], ['1','0'] o []

const params = new URLSearchParams();

// Lógica de filtrado
if (estado.length === 0) {
  // Sin filtros → mostrar solo activas
  params.append('estado[]', '1');
} else if (estado.length === 1) {
  // Solo un estado → aplicar filtro
  params.append('estado[]', estado[0]);
}
// Si hay dos valores, no se aplica filtro → se muestran todas

try {
  const res = await fetch(`http://localhost:3000/api/areas?${params.toString()}`);
  const json = await res.json();
  areas = json.data || [];
} catch (error) {
  console.error('Error al obtener áreas:', error);
}




// Page header configuration with breadcrumb navigation
const pageHeaderProps: PageHeaderProps = {
  title: 'Areas',
  breadcrumbs: [
    { label: 'Dashboard', href: getPathPrefix('/dashboard'), class: '' },
    { label: 'Roles & Permissions', href: getPathPrefix('/roles-permissions'), class: '' },
    { label: 'Areas', class: 'active' }
  ],
  actions: [
    {
      label: 'Agregar Area',
      href: getPathPrefix('/roles-permissions/permissions/add'),
      type: 'link',
      variant: 'btn-primary',
      icon: 'ri-add-line'
    }
  ]
}
---


<AdminLayout
  title="Areas de Carreras INACAP"
  description="Gestión de áreas de carreras"
  currentPath="roles-permissions/permissions/list"
  pageScript={pageScript}
  pageCss={pageStyles}
>
  <PageHeader {...pageHeaderProps} />

  <!-- Permissions Table -->
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <div class="astero-table">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3 mb-4">
              <!--begin::Search-->
              <div class="search-wrapper">
                <i class="ri-search-line search-icon"></i>
                <input
                  type="text"
                  class="form-control search-input"
                  data-table-filter="search"
                  placeholder="Buscar áreas..."
                />
                <button type="button" class="btn-clear search-clear" style="display: none;">
                  <i class="ri-close-line"></i>
                </button>
              </div>
              <!--end::Search-->
              <!-- Botón para abrir filtros -->
              <button class="btn btn-outline-primary" data-bs-toggle="offcanvas" data-bs-target="#filterDrawer">
                <i class="ri-filter-2-line"></i> Filtros
              </button>

              <!-- Drawer de filtros -->
              <div class="offcanvas offcanvas-end" tabindex="-1" id="filterDrawer">
                <div class="offcanvas-header border-bottom">
                  <h5 class="offcanvas-title">Opciones de Filtro</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Cerrar"></button>
                </div>
                <div class="offcanvas-body">
                  <form id="form-filtros" class="d-flex flex-column gap-3">
                    <!-- Estado -->
                    <div>
                      <label class="form-label fw-medium">Estado</label>
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="estado[]" value="1" checked />
                        <label class="form-check-label" for="estado-activo">Activa</label>
                      </div>
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="estado[]" value="0" />
                        <label class="form-check-label" for="estado-inactivo">Inactiva</label>
                      </div>
                    </div>
                    <!-- Acciones -->
                    <div class="d-flex gap-2 mt-3">
                      <button type="submit" class="btn btn-primary flex-grow-1">Aplicar filtros</button>
                      <button type="button" class="btn btn-light" id="reset-filtros">Reiniciar</button>
                    </div>
                  </form>
                </div>
              </div>
                <!--begin::Bulk Actions-->
                <div class="bulk-actions-div d-none" data-table-toolbar="bulk_selected">
                  <span class="selected-count me-2"
                    ><span data-table-select="selected_count"></span> items selected</span
                  >
                  <button
                    class="btn btn-light-danger shadow-none align-items-center gap-2 bulk-delete"
                    data-table-select="delete_selected"
                  >
                    Delete Selected
                  </button>
                </div>
                <!--end::Bulk Actions-->
              </div>
              <!--end::Table toolbar-->
            </div>
            <div class="table-container">
              <div
                class="d-none flex-column flex-lg-row justify-content-start filter-datas mb-3"
                data-filters
              >
                <strong class="fs-6 me-2 text-primary">Filters : </strong>
                <div class="d-flex flex-row flex-wrap align-items-center" data-filters-data></div>
              </div>
              <div class="table-responsive border-0">
                <table id="table_permissions" class="table align-middle">
                  <thead>
                    <tr>
                      <th class="text-center align-middle" style="width: 40px;">
                        <input
                          class="form-check-input m-0"
                          type="checkbox"
                          data-table-select="select_all"
                        />
                      </th>
                      <th>DESCRIPCIÓN</th>
                      <th>ESTADO</th>
                      <th class="text-end pe-3">Acciones</th>
                    </tr>
                  </thead>
                  <tbody>
                    {areas.map(area => (
                      area && typeof area.id_area === 'number' ? (
                        <tr>
                          <td class="text-center align-middle" style="width: 40px;">
                            <input
                              class="form-check-input m-0"
                              type="checkbox"
                              data-row-id={area.id_area}
                            />
                          </td>
                          <td>{area.descripcion}</td>
                          <td>{area.estado === 1 ? 'Activo' : 'Inactivo'}</td>
                          <td class="text-end">
                            <div class="dropdown text-end">
                              <button
                                class="btn btn-light btn-active-light-primary dropdown-toggle shadow-none action-btn"
                                type="button"
                                data-bs-toggle="dropdown"
                                aria-expanded="false"
                              >
                                Acción
                              </button>
                              <ul class="dropdown-menu">
                                <li>
                                  <a href={`/roles-permissions/permissions/edit?id=${area.id_area}`} class="dropdown-item text-primary">
                                  Editar
                                </a>
                                </li>
                                <li><hr class="dropdown-divider" /></li>
                                {area.estado === 1 ? (
                                  <li>
                                    <a
                                      class="dropdown-item text-danger"
                                      href="#"
                                      onclick={`if (confirm('¿Estás seguro de que deseas desactivar esta área?')) {
                                        fetch('http://localhost:3000/api/areas/${area.id_area}/toggle', {
                                          method: 'POST'
                                        })
                                        .then(res => res.json())
                                        .then(data => {
                                          alert(data.mensaje);
                                          location.reload();
                                        });
                                      } return false;`}
                                    >
                                      Desactivar
                                    </a>
                                  </li>
                                ) : (
                                  <li>
                                    <a
                                      class="dropdown-item text-success"
                                      href="#"
                                      onclick={`if (confirm('¿Estás seguro de que deseas activar esta área?')) {
                                        fetch('http://localhost:3000/api/areas/${area.id_area}/toggle', {
                                          method: 'POST'
                                        })
                                        .then(res => res.json())
                                        .then(data => {
                                          alert(data.mensaje);
                                          location.reload();
                                        });
                                      } return false;`}
                                    >
                                      Activar
                                    </a>
                                  </li>
                                )}
                              </ul>
                            </div>
                          </td>
                        </tr>
                      ) : null
                    ))}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <ConfirmationModal />
</AdminLayout>
